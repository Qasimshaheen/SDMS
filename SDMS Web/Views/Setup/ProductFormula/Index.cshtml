@{

    ViewData["Title"] = "Product";
    ViewBag.PageHeading = "Product Formula";
}


<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="card card-secondary">
                <div class="card-header">
                    <h4 class="card-title">Formula Master</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="ddlProduct">Product Name</label>
                                <select id="ddlProduct" name="productCategoryId" class="form-control js-select2">
                                </select>
                            </div>
                        </div>
                    </div>
                    <h4 style="border-bottom:1px solid rgba(0,0,0,.125)">Formula Details</h4>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="ddlProductDetails">Product Name</label>
                                <select id="ddlProductDetails" name="productCategoryId" class="form-control js-select2">
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label for="ddlProduct">Quantity</label>
                                <input type="number" class="form-control" placeholder="0.00" name="qty" value="" />
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                <label class="mr-lg-5">Actions </label>
                                <button type="button" class="btn btn-warning"><i class="fas fa-plus"></i></button>
                            </div>
                        </div>
                        <div class="col-sm-6">

                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="button" id="btnProductFormulaCreate" class="btn btn-primary">Submit</button>
                    <button type="button" id="btnProductFormulaUpdate" class="btn btn-info" disabled>Update</button>
                    <button type="button" id="btnProductFormulaReset" class="btn btn-secondary float-right">Reset</button>
                </div>
            </div>
        </div>
    </div>
</section>