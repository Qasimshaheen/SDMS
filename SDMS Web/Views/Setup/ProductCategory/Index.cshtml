@{
    ViewData["Title"] = "Product";
    ViewBag.PageHeading = "Product Category";
}




<section class="content">
    <form id="frmCategories">
        <div class="row">

            <div class="col-md-6">
                <div class="card card-secondary">
                    <div class="card-header">
                        <h3 class="card-title">Product Category</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label for="CategoryName">Category Name</label>
                                    <input id="CategoryName" name="name" type="text" class="form-control" placeholder="Enter Product Category">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" id="btnSubmit" class="btn btn-primary">Submit</button>
                        <button type="submit" id="btnUpdate" class="btn btn-info" disabled>Update</button>
                        <button type="submit" id="btnDelete" class="btn btn-danger" disabled>Delete</button>
                    </div>
                </div>
            </div>


            <div class="col-md-6">
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Products Categories</h3>
                    </div>

                    <div class="card-body">
                        <table id="CategoryTable" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Category Name</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>

                </div>
            </div>

        </div>
    </form>
</section>

@section Scripts{
    <script>

        loadCategoriesForGrid();

    </script>
}