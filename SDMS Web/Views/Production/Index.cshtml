@{
    ViewData["Title"] = "Manufacturing";
    ViewBag.PageHeading = "Product Manufacturing";
}
@section Styles{
    <link href="~/css/daterangepicker.css" rel="stylesheet" />
    <link href="~/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
}
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card card-teal card-outline">
                <div class="card-header">
                    <h4 class="card-title">Manufacturing Master</h4>
                </div>
                <form id="frmManufacturing">
                    <input type="hidden" id="hdnFormulaMasterId" />
                    <input type="hidden" id="hdnManufacturingMasterId" />
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <label for="ddlFormulaMasterProductId">Formula Product :</label>
                                <div class="input-group">
                                    <a href="#" data-toggle="modal" data-target="#modal-sm" class="btn btn-outline-primary"><i class="fas fa-search-plus"></i></a>
                                    <select id="ddlFormulaMasterProductId" disabled class="form-control" style="appearance: none;"></select>
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <div class="form-group">
                                    <label for="dtpManufactureDate">Date:</label>
                                    <div class="input-group date" id="reservationdate" data-target-input="nearest">
                                        <input id="dtpManufactureDate" type="text" name="date" class="form-control datetimepicker-input" data-target="#reservationdate" />
                                        <div class="input-group-append" data-target="#reservationdate" data-toggle="datetimepicker">
                                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <div class="form-group">
                                    <label for="ddlWarehouseId">Warehouse :</label>
                                    <select id="ddlWarehouseId" class="form-control js-select2"></select>
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <div class="form-group">
                                    <label for="txtQuantity">Quantity :</label>
                                    <input id="txtQuantity" type="number" class="form-control" min="1" placeholder="0.0" />
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <div class="form-group">
                                    <label for="txtBatchNo">BatchNo:</label>
                                    <input id="txtBatchNo" type="text" class="form-control" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-6">
                                <h5>Manufacturing Details</h5>
                                <table id="productManufactureDetailTable" class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Product</th>
                                            <th>Unit</th>
                                            <th>Required Qty</th>
                                            <th>Adjust Qty</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                            <div class="col-sm-6">
                                <h5>Raw Materials</h5>
                                <table id="productRawMaterialTable" class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Warehouse</th>
                                            <th>Batch No</th>
                                            <th>Available</th>
                                            <th>Quantity</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="button" id="btnManufactureCreate" class="btn btn-primary">Submit</button>
                        <button type="button" id="btnManufactureUpdate" class="btn btn-info" disabled>Update</button>
                        <button type="button" id="btnManufactureReset" class="btn btn-secondary float-right">Reset</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modal-sm">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 >Formula Products</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <table id="FormullookupTable" class="table table-hover">
                        <thead>
                            <tr>
                                <th>Products</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts{
    <script src="~/js/moment.min.js"></script>
    <script src="~/js/daterangepicker.js"></script>
    <script src="~/js/tempusdominus-bootstrap-4.min.js"></script>

    <script>
        $(function () {
            //Date range picker
            $('#reservationdate').datetimepicker({
                format: 'L'
            });
        })
        loadFormulaForManufactureLookup();
        loadProductForManufactureMaster();
        loadWarehouseForddl();
    </script>

}